var releaseWindow = Ti.UI.createWindow({
	backgroundColor: "blue"
});

var backButton = Ti.UI.createButton({
	bottom: 0,
	height: 50,
	title: "Back",
	color: "d92332",
	backgroundColor: "white",
	width: "50%",
});

var closeWindow = function(){
	releaseWindow.close();
};

backButton.addEventListener("click", closeWindow);

releaseWindow.add(backButton);
releaseWindow.open();
