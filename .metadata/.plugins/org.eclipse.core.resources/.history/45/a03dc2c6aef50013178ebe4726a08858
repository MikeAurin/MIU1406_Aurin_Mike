Titanium.UI.setBackgroundColor('red');

var mainWin = Ti.UI.createWindow({
	backgroundColor: "white"
});

var logo = Ti.UI.createLabel({
	backgroundImage: "redbox.png",
	top: 50,
	height: 100,
	width: "80%"
});

var signIn = Ti.UI.createButton({
	width: "60%",
	bottom: 10,
	height: 50,
	title: "Sign In",
	borderRadius: 6,
	color: "white",
	font: {fontFamily: "Verdana", fontSize: 22},
	backgroundColor: "red"
});

var logIn = Ti.UI.createButton({
	width: "60%",
	bottom: 80,
	height: 50,
	title: "Sign In",
	borderRadius: 6,
	color: "white",
	font: {fontFamily: "Verdana", fontSize: 22},
	backgroundColor: "red"
});


mainWin.add(logo, logIn, signIn);
mainWin.open();
