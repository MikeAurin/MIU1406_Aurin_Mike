var releaseWindow = Ti.UI.createWindow({
	backgroundColor: "blue"
});

var backButton = TI.UI.createButton({
	bottom: 0,
	height: 50,
	title: "Back",
	color: "d92332",
	backgroundColor: "white",
	width: "50%",
});

var closeSwitch = function(){
	switchWindow.close();
};

backButton.addEventListener("click", closeSwitch);

releaseWindow.add(backButton);
releaseWindow.open();
