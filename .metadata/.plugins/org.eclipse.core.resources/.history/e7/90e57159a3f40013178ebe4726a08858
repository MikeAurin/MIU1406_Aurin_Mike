function ApplicationTabGroup(Window) {
	//create module instance
	var self = Ti.UI.createTabGroup();

	//create app tabs
	var win1 = new Window(L('newReleases')),
		win2 = new Window(L('recommended'));
		win3 = new Window(L('myPicks'));

	var tab1 = Ti.UI.createTab({
		title: L('New Releases'),
		window: win1
	});
	win1.containingTab = tab1;

	var tab2 = Ti.UI.createTab({
		title: L('Recommended'),
		window: win2
	});
	win2.containingTab = tab2;
	
	var tab3 = Ti.UI.createTab({
		title: "My Picks",
		window: win3,
		size: 20
	});
	win1.containingTab = tab3;
	

	self.addTab(tab1);
	self.addTab(tab2);
	self.addTab(tab3);

	return self;
};

module.exports = ApplicationTabGroup;
